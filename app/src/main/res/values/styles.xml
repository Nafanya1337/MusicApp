<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header_Text_Home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Header_Nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_24sp_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Description_Text_Home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Mini_pleer_Songname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sp_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="Mini_pleer_Artistname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sp_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_thin</item>
    </style>

    <style name="Button_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="Songname_Card">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_14sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="PlaylistName">
        <item name="maxWidth">130dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_16sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="PlaylistArtist">
        <item name="maxWidth">130dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_13sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sf_pro_display_thin</item>
    </style>

    <style name="CurrentPlaylistStyleHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_light</item>
    </style>

    <style name="CurrentPlaylistStyleName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>


    <style name="FullScreenPlayerArtistName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="FullScreenPlayerSongName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_24sp_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Widget.Theme.MusicApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>